---
interface Props {
  goto?: string;
}

const { goto = "#" } = Astro.props;
---

<div class="flex items-center justify-center h-[92vh] w-full relative">
  <div class="flex flex-col w-full items-center justify-center space-y-6 z-10">
    <h1 class="text-6xl text-center sm:text-7xl drop-shadow-xl select-none">NAME HERE</h1>
    <a
      class="border-2 py-1 px-4 text-lg sm:text-xl"
      href={goto}
      >Projects</a
    >
  </div>
  <div class="purple-gradient absolute w-full h-full z-0">
    <div class="shapes absolute w-full h-full overflow-hidden">
      <div></div>
      <!-- <div></div>
      <div></div> -->
    </div>
  </div>
</div>

<style>
  .purple-gradient {
    background: rgb(120, 73, 213);
    background: linear-gradient(
      0deg,
      rgba(120, 73, 213, 1) 0%,
      rgba(75, 21, 162, 1) 42%,
      rgba(18, 18, 34, 1) 100%
    );
  }

  .shapes div {
    position: absolute;
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 25%;
  }

  .shapes div:nth-child(1) {
    width: 150px;
    height: 150px;
    animation-delay: 0s;
    bottom: -80px;
    animation: moveRight 35s linear infinite, pulse 35s linear infinite;
  }

  @keyframes moveRight {
    0% {
      transform: translateX(-10vw) rotate(0deg);
    }

    100% {
      transform: translateX(110vw) rotate(720deg);
    }
  }

  @keyframes pulse {
    0% {
      opacity: 0;
    } 

    50% {
      opacity: 0.5;
    }

    100% {
      opacity: 0;
    }
  }
</style>
